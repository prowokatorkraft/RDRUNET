@model Epam.Library.Pl.Web.ViewModels.AccountVM

@{
    ViewBag.Title = "EditRole";
}

<h2>Edit role</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.RadioButton("roleRadio", RoleType.admin, (RoleType.admin.ToString() == Model.Role.Name ? true : false))
        @(" "+RoleType.admin+ " ")
        @Html.RadioButton("roleRadio", RoleType.librarian, (RoleType.librarian.ToString() == Model.Role.Name ? true : false))
        @(" "+RoleType.librarian+ " ")
        @Html.RadioButton("roleRadio", RoleType.user, (RoleType.user.ToString() == Model.Role.Name ? true : false))
        @(" "+RoleType.user+ " ")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "GetAll")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
