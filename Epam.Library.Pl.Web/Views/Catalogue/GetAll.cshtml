@using Epam.Library.Pl.Web.ViewModels.Catalogue
@model IEnumerable<ElementVM>

@{
    ViewBag.Title = "GetAll";
}

<h2>Catalogue</h2>

@using (Html.BeginForm("Create", "Catalogue", FormMethod.Get))
{
    <input type="submit" value="Create" />

    @Html.RadioButton("typeRadio", TypeEnumVM.Book, true)
    @(" "+TypeEnumVM.Book+" ")
    @Html.RadioButton("typeRadio", TypeEnumVM.Patent)
    @(" "+TypeEnumVM.Patent+" ")
    @Html.RadioButton("typeRadio", TypeEnumVM.Newspaper)
    @(" "+TypeEnumVM.Newspaper+" ")
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Identity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPages)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPages)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
