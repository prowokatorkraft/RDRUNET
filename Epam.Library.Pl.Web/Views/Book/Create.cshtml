@helper TranlateAuthorIDsInJS(int[] AuthorIDs)
{
    <script>
        let AuthorIDs = new Array();
        @if (AuthorIDs != null)
        {
            foreach (var item in Model.AuthorIDs)
            {
                @:AuthorIDs.push(@item)
            }
        }
    </script>
}

@helper MultiSelectAuthors(int[] authorIDs) ////
{
    string GetSelected(int id)
    {
        if (authorIDs != null)
        {
            return authorIDs.Any(a => a.Equals(id)) ? "selected" : null;
        }
        return null;
    }

    List<dynamic> list = new List<dynamic>(); /////

    <select class="form-control col-md-3" id="AuthorIDs" multiple="multiple" name="AuthorIDs" size="4">
        @foreach (var item in list)
        {
            <option selected=@GetSelected(item.Id) value=@item.Id>@item.Value</option>
        }
    </select>
}
