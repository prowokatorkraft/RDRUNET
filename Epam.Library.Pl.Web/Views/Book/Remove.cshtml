@model Epam.Library.Pl.Web.ViewModels.ElementVM
@{
    if (!User.IsInRole(RoleType.librarian.ToString()))
    {
        Response.Redirect("~/Account/Login");
    }
    ViewBag.Title = "Remove";
}

<h2>Remove</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
